<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/producto"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="5dp"
        android:text="Producto"
        app:layout_constraintBaseline_toBaselineOf="@+id/valor"
        app:layout_constraintEnd_toStartOf="@+id/valor"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/valor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="7dp"
        android:text="Valor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cantidad"
        app:layout_constraintStart_toEndOf="@+id/producto"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cantidad"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginEnd="41dp"
        android:text="Cantidad"
        app:layout_constraintBaseline_toBaselineOf="@+id/valor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/valor" />
</androidx.constraintlayout.widget.ConstraintLayout>